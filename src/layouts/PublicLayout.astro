---
import { ViewTransitions } from "astro:transitions";
import { Toaster } from "@/components/ui/sonner";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "10x Cards - Enhance your learning with AI-powered flashcards" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | 10x Cards</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions />
  </head>
  <body class="bg-background min-h-screen flex flex-col">
    <!-- Toast Provider -->
    <Toaster position="top-right" client:load />

    <!-- Public Header -->
    <header class="py-4 border-b">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="flex items-center space-x-2">
          <span class="font-bold text-xl">10x Cards</span>
        </a>
        <nav class="flex items-center space-x-4">
          <a href="/login" class="text-sm font-medium hover:text-primary">Login</a>
          <a
            href="/register"
            class="text-sm bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 rounded-md">Sign Up</a
          >
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <div class="container mx-auto">
        <slot />
      </div>
    </main>

    <!-- Public Footer -->
    <footer class="py-6 border-t">
      <div class="container mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex items-center space-x-2">
            <span class="font-medium">10x Cards</span>
          </div>
          <div class="flex space-x-6 mt-4 md:mt-0">
            <a href="/about" class="text-sm text-muted-foreground hover:text-foreground">About</a>
            <a href="/privacy" class="text-sm text-muted-foreground hover:text-foreground">Privacy</a>
            <a href="/terms" class="text-sm text-muted-foreground hover:text-foreground">Terms</a>
            <a href="/contact" class="text-sm text-muted-foreground hover:text-foreground">Contact</a>
          </div>
          <div class="text-sm text-muted-foreground mt-4 md:mt-0">
            &copy; {new Date().getFullYear()} 10x Cards
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
