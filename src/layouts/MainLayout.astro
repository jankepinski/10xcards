---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="10x Cards - Learn faster with AI-generated flashcards" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <header class="sticky top-0 z-40 w-full border-b bg-background">
        <div class="container flex h-16 items-center justify-between">
          <div class="flex items-center gap-2">
            <a href="/" class="font-bold text-xl">10x Cards</a>
          </div>
          <nav class="flex items-center gap-4">
            <a href="/login" class="text-sm font-medium hover:underline"> Login </a>
            <a
              href="/register"
              class="bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 text-sm font-medium rounded-md"
            >
              Sign Up
            </a>
          </nav>
        </div>
      </header>
      <main class="flex-1 py-6">
        <slot />
      </main>
      <footer class="py-6 border-t">
        <div class="container flex flex-col items-center justify-center gap-4 md:flex-row md:justify-between">
          <p class="text-sm text-muted-foreground">
            &copy; {new Date().getFullYear()} 10x Cards. All rights reserved.
          </p>
          <nav class="flex items-center gap-4 text-sm text-muted-foreground">
            <a href="#" class="hover:underline">Privacy</a>
            <a href="#" class="hover:underline">Terms</a>
            <a href="#" class="hover:underline">Contact</a>
          </nav>
        </div>
      </footer>
    </div>
  </body>
</html>
