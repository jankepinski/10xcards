---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="10x Cards - Learn faster with AI-generated flashcards" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <header class="sticky top-0 z-40 w-full border-b bg-background">
        <div class="container flex h-16 items-center">
          <div class="flex items-center gap-2">
            <a href="/" class="font-bold text-xl">10x Cards</a>
          </div>
        </div>
      </header>
      <main class="flex-1 py-6 flex items-center justify-center">
        <slot />
      </main>
      <footer class="py-4 border-t">
        <div class="container">
          <p class="text-center text-sm text-muted-foreground">
            &copy; {new Date().getFullYear()} 10x Cards. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
