---
import AuthLayout from "../layouts/AuthLayout.astro";
import RegisterForm from "../components/RegisterForm";

// Check if user is already logged in
const { session } = Astro.locals;

// If the user is already logged in, redirect to the dashboard
if (session) {
  return Astro.redirect("/generate-flashcards");
}
---

<AuthLayout title="Register - 10x Cards">
  <div class="container max-w-md mx-auto py-8">
    <div class="space-y-6">
      <div class="text-center">
        <h1 class="text-2xl font-bold tracking-tight">Create an account</h1>
        <p class="text-sm text-muted-foreground mt-2">Sign up to start creating and studying your flashcards</p>
      </div>

      <RegisterForm client:load />

      <div class="text-center text-sm">
        <span class="text-muted-foreground">Already have an account?</span>
        <a href="/login" class="text-primary hover:underline ml-1">Login</a>
      </div>
    </div>
  </div>
</AuthLayout>
