---
import AuthLayout from "../layouts/AuthLayout.astro";
import LoginForm from "../components/LoginForm";

// Sprawdzenie czy użytkownik jest już zalogowany
const { session } = Astro.locals;

// Jeśli użytkownik jest zalogowany, przekieruj go na stronę dashboard
if (session) {
  return Astro.redirect("/generate-flashcards");
}
---

<AuthLayout title="Login - 10x Cards">
  <div class="container max-w-md mx-auto py-8">
    <div class="space-y-6">
      <div class="text-center">
        <h1 class="text-2xl font-bold tracking-tight">Login to your account</h1>
        <p class="text-sm text-muted-foreground mt-2">Enter your credentials to access your flashcards</p>
      </div>

      <LoginForm client:load />

      <div class="text-center text-sm">
        <span class="text-muted-foreground">Don&apos;t have an account?</span>
        <a href="/register" class="text-primary hover:underline ml-1">Register now</a>
      </div>
    </div>
  </div>
</AuthLayout>
