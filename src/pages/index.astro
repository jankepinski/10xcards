---
import PublicLayout from "../layouts/PublicLayout.astro";
import { Button } from "@/components/ui/button";
---

<PublicLayout title="Home">
  <section class="py-20">
    <div class="text-center max-w-3xl mx-auto px-4">
      <h1 class="text-4xl font-extrabold tracking-tight lg:text-5xl mb-6">Learn Faster with AI-Powered Flashcards</h1>
      <p class="text-xl text-muted-foreground mb-8">
        Transform any text into effective flashcards in seconds. Boost your learning and memory retention with 10x
        Cards.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" asChild>
          <a href="/login">Get Started</a>
        </Button>
        <Button size="lg" variant="outline" asChild>
          <a href="/about">Learn More</a>
        </Button>
      </div>
    </div>
  </section>

  <section class="py-16 bg-muted/50">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">How It Works</h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-card p-6 rounded-lg shadow-sm">
          <div
            class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4 text-primary font-bold"
          >
            1
          </div>
          <h3 class="text-xl font-bold mb-2">Paste Your Text</h3>
          <p class="text-muted-foreground">Simply paste any learning material you want to study.</p>
        </div>

        <div class="bg-card p-6 rounded-lg shadow-sm">
          <div
            class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4 text-primary font-bold"
          >
            2
          </div>
          <h3 class="text-xl font-bold mb-2">Generate Flashcards</h3>
          <p class="text-muted-foreground">Our AI analyzes your text and creates optimized flashcards automatically.</p>
        </div>

        <div class="bg-card p-6 rounded-lg shadow-sm">
          <div
            class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4 text-primary font-bold"
          >
            3
          </div>
          <h3 class="text-xl font-bold mb-2">Study & Improve</h3>
          <p class="text-muted-foreground">Review your flashcards and track your progress to maximize retention.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to enhance your learning?</h2>
      <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
        Join thousands of students and professionals who use 10x Cards to learn more effectively.
      </p>
      <Button size="lg" asChild>
        <a href="/register">Create Free Account</a>
      </Button>
    </div>
  </section>
</PublicLayout>
