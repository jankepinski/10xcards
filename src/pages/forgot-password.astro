---
import AuthLayout from "../layouts/AuthLayout.astro";
import PasswordRecoveryForm from "../components/PasswordRecoveryForm";
---

<AuthLayout title="Recover Password - 10x Cards">
  <div class="container max-w-md mx-auto py-8">
    <div class="space-y-6">
      <div class="text-center">
        <h1 class="text-2xl font-bold tracking-tight">Reset your password</h1>
        <p class="text-sm text-muted-foreground mt-2">Enter your email to receive instructions for password reset</p>
      </div>

      <PasswordRecoveryForm client:load />

      <div class="text-center text-sm">
        <a href="/login" class="text-primary hover:underline"> Return to login </a>
      </div>
    </div>
  </div>
</AuthLayout>
